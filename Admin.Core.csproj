<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageVersion>2.0</PackageVersion>
    <PackageId>Admin.Core.Templates</PackageId>
    <Title>Admin.Core WebApi Templates</Title>
    <Authors>Anonymous</Authors>
    <Description>Templates to use when creating an application for WebApi.</Description>
    <PackageTags>dotnet-new;templates;webapi</PackageTags>
    <TargetFramework>net5.0</TargetFramework>

    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Admin.Core\**" Exclude="Admin.Core\**\bin\**;Admin.Core\**\obj\**;Admin.Core\.git\**;Admin.Core\.github\**" />
    <Compile Remove="**\*" />
  </ItemGroup>

</Project>